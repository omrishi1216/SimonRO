<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/simonro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/simon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Simon"
            android:textColor="#ffffff"
            android:textSize="80dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/simon"
            android:fontFamily="sans-serif-smallcaps"
            android:text="R"
            android:textColor="#E00A0A"
            android:textSize="80dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/r"
            android:fontFamily="sans-serif-smallcaps"
            android:text="0"
            android:textColor="#E00A0A"
            android:textSize="80dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/notification_pause"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_below="@id/simonro"
        android:layout_centerHorizontal="true"
        android:background="@drawable/playgame"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/b1_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0F46F7"
            android:elevation="15dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b2_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#33ff66"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/first"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/b3_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF3333"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b4_yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff333"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/third"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/second"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/b5_violet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D224EE"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b6_orange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF5825"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/third"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="12dp"
        android:text="Best Score : "
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="italic" />


</RelativeLayout>